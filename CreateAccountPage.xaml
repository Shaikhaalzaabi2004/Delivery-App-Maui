<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeliveryApp.CreateAccountPage"
             Title="CreateAccountPage">
    
    <VerticalStackLayout
    Padding="30,0"
    Spacing="25" 
    WidthRequest="800"
    HorizontalOptions="Center">
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 0, 0, 20">
            <Label Text="Email:" WidthRequest="150"/>
            <Entry x:Name="emailEntry" WidthRequest="200"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 0, 0, 20">
            <Label Text="Name:" WidthRequest="150"/>
            <Entry x:Name="nameEntry" WidthRequest="200"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 0, 0, 20">
            <Label Text="Password:" WidthRequest="150"/>
            <Entry x:Name="passEntry" IsPassword="True" WidthRequest="200"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 0, 0, 20">
            <Label Text="Confirm Password:" WidthRequest="150"/>
            <Entry x:Name="confirmEntry" IsPassword="True" WidthRequest="200"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0, 0, 0, 20">
            <Button Text="Create Account" x:Name="createAccountBtn" Clicked="createAccountBtn_Clicked"/>
            <Button Text="Cancel" x:Name="cancelBtn" Clicked="cancelBtn_Clicked" Margin="20, 0, 0, 0"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>